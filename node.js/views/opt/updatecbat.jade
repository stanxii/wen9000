extends ../main.layout

block content
  script(type='text/javascript', src='/javascripts/updatecbat.js')
  h1
    label  局端升级
    img(id='showproc',src='http://localhost:8080/wen9000/images/show.png',style='margin-left:30px')
  div
    table#upcbat_table
  br
  button(id='refresh')  刷新
  br
  h3  FTP服务器
  hr
  #ftpinfo(style='float:left')  
    table
      tr
        td
          label  Server IP:
        td
          input(type='text',id='serverip',value='192.168.1.252')
      tr
        td
          label  Server Port:
        td
          input(type='text',id='serverport',value='21')
      tr
        td
          label  用户名:
        td
          input(type='text',id='username',value='anonymous')
      tr
        td
          label  密码:
        td
          input(type='text',id='password')
    br
    button(id='ftp_connect',style='float:right')  获取文件列表
  #choosefile(style='float:left;margin-left:200px;display:none')
    label  选择升级文件:
    select#combox_files
    br
    button(id='btn_update',style='margin-top:105px;float:right')  开始升级

  div(id='dialog-message-ftp-failed',title='提示',style='display:none')
    p
      span.ui-icon.ui-icon-alert(style='float:left; margin:0 7px 50px 0;')
      p  提示
    p.
      获取文件列表失败!
                                                                                                                                                                  
  
  div(id='dialog-message-proc',title='升级进度',style='display:none')
    img(src='http://localhost:8080/wen9000/images/loading.gif',style='margin-left:80px')
    br
    label#up_proc(style='margin-left:100px')                 