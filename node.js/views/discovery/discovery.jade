extends ../main.layout

block content
  script(type='text/javascript', src='/javascripts/discovery.js')
  h1  
    label 设备搜索
  p
  p
  p
  table#discoveryTable
    tr
      td
        label  起始IP:
      td
        input(type='text',id='startip', pattern="([\\d]{1,3}\\.){3}[\\d]{1,3}",value='',style='width:200px')
    tr
      td
        label  终止IP:
      td
        input(type='text',id='stopip',pattern="([\\d]{1,3}\\.){3}[\\d]{1,3}",value='',style='width:200px')
  br
  button(id='submit',style='margin-left:250px')  搜索

  div(id='dialog-dis-warn',title='提示',style='display:none')
    p
      span.ui-icon.ui-icon-alert(style='float:left;margin:0 7px 50px 0;')
      p  提示.
    p.
      错误.
      请输入正确的IP范围！      